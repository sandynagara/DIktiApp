<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="10dp"
        android:id="@+id/cardlomba">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="135dp"
                android:layout_height="175dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_dikti"
                android:id="@+id/gambarlomba"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nama_lomba"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gambarlomba"
                    android:layout_marginTop="12dp"
                    android:maxLines="2"
                    android:text="Lomba Poster Nasional “Kampanye Positif Ramadhan Saat Pandemi Covid 19”"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama_lomba"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:text="LKTI"
                    android:padding="1dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/jenis_lomba"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jenis_lomba"
                    android:id="@+id/deadline"
                    android:layout_marginTop="4dp"
                    android:textSize="12dp"
                    android:text="19 November 2020"
                    android:textColor="#DC143C"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

</FrameLayout>