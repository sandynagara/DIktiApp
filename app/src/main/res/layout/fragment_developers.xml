<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_baseline_arrow_back_blue"
            android:layout_margin="10dp"
            android:id="@+id/kembali"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About" android:textStyle="bold"
            android:textColor="@color/deepSkyBlue"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp" />

    </RelativeLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fragment_apliksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi"
            android:textAlignment="center"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:paddingBottom="10dp"
            android:background="@drawable/garis"
            />

        <TextView
            android:id="@+id/fragment_developers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_toEndOf="@id/fragment_lomba"
            android:textStyle="bold"
            android:textColor="@color/deepSkyBlue"
            android:textSize="15sp"
            android:paddingBottom="10dp"
            android:background="@drawable/garis_blue"
            />

    </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="FrontEnd"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="18dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_dikti"
                    android:id="@+id/foto_frontend1"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Sandy Setyanagara"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/foto_frontend1"
                    android:textSize="18sp"
                    android:textColor="@color/DarkSlateGray"
                    android:id="@+id/nama_frontend1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2018"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/Gray"
                    android:id="@+id/angkatan_frontend1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Pendidikan dan Penelitian"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/foto_frontend1"
                    android:textSize="15sp"
                    android:paddingBottom="16dp"
                    android:layout_below="@id/nama_frontend1"
                    android:textColor="@color/Gray"
                    android:id="@+id/nama_departemen_frontend1"
                    android:background="@drawable/garis"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BackEnd"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="18dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_dikti"
                    android:id="@+id/foto_backend1"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Sandy Setyanagara"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/foto_backend1"
                    android:textSize="18sp"
                    android:textColor="@color/DarkSlateGray"
                    android:id="@+id/nama_backend1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2018"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/Gray"
                    android:id="@+id/angkatan_backend1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Pendidikan dan Penelitian"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/foto_backend1"
                    android:textSize="15sp"
                    android:paddingBottom="16dp"
                    android:layout_below="@id/nama_backend1"
                    android:textColor="@color/Gray"
                    android:id="@+id/nama_departemen_backend1"
                    android:background="@drawable/garis"/>

            </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Today's Work, do it tomorrow. Tomorrow's work, do it the day after tomorrow"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/deepSkyBlue"
        android:padding="5dp"
        android:textSize="18dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="- Chillax by Twice"
        android:textAlignment="center"
        android:textStyle="italic"
        android:padding="5dp"
        android:textSize="18dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>
</LinearLayout>




