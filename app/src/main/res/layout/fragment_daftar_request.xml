<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_bar"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/card_kembali">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_arrow_back_blue"
                    android:layout_margin="12dp"
                    android:id="@+id/kembali"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:text="Daftar Request Tim"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/deepSkyBlue"
                    android:layout_margin="12dp"/>

            </RelativeLayout>


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_bar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_bar"
                android:id="@+id/filter"

                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/search2"
                    android:background="@drawable/border">

                    <SearchView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:queryHint="Search Here"
                        android:id="@+id/search"
                        android:iconifiedByDefault="false"

                        android:layout_centerVertical="true"
                        android:background="@null" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Lomba : All"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingStart="13dp"
                    android:layout_marginStart="20dp"
                    android:paddingEnd="13dp"
                    android:layout_below="@id/search2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/jenis_lomba"
                    android:background="@drawable/border"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My request"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingStart="13dp"
                    android:paddingEnd="13dp"
                    android:layout_below="@id/search2"
                    android:layout_toEndOf="@+id/jenis_lomba"
                    android:background="@drawable/border"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/filter_myRequest"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filter_myRequest"
                    android:id="@+id/daftar_request"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/tampilan_request_tim"/>

            </RelativeLayout>



        </ScrollView>

</RelativeLayout>