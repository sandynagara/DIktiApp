<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/card_kembali">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_blue"
            android:layout_margin="12dp"
            android:id="@+id/kembali"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Geodesi Bangga "
            android:textColor="@color/deepSkyBlue"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_kembali">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_dikti"
                android:layout_marginTop="6dp"
                android:id="@+id/gambar_geodesi_bangga" />

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deadline"
                    android:id="@+id/nama_lomba"
                    android:text="Lomba Poster Nasional Kampanye Positif Ramadhan Saat Pandemi Covid 19"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:fontFamily="sans-serif-light"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Pemenang"
                    style="@style/detail_lomba_beasiswa"
                    android:id="@+id/pemenang"
                    android:padding="10dp"
                    android:textColor="@color/Black" />




                <TextView
                    style="@style/detail_lomba_beasiswa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/deskripsi_geodesi_bangga"
                    android:text="Lomba ini diselengarakan oleh ....."
                    android:textColor="@color/Black" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>