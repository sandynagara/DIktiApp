<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/card_kembali">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_baseline_arrow_back_blue"
            android:layout_margin="10dp"
            android:id="@+id/kembali"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Geodesi Bangga "
            android:textColor="@color/deepSkyBlue"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_kembali">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_dikti"
                android:layout_marginTop="6dp"
                android:id="@+id/gambar_geodesi_bangga" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:layout_marginTop="-30dp"
            android:paddingEnd="40dp"
            android:layout_marginEnd="-30dp"
            android:background="@drawable/border_biru_2"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pembatas_lomba"
                android:id="@+id/nama_lomba"
                android:text="Lomba Poster Nasional Kampanye Positif Ramadhan Saat Pandemi Covid 19"
                android:textSize="18sp"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif-light"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemenang"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/Black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pemenang"
                android:background="@drawable/pembatas_lomba"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/pemenang"
                android:paddingBottom="10dp"
                android:textColor="@color/Black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingStart="10dp"
                android:textColor="@color/Black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Deskripsi"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/deskripsi_geodesi_bangga"
                android:paddingBottom="10dp"
                android:textColor="@color/Black" />
        </LinearLayout>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>