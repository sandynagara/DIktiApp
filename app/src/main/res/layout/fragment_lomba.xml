<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/pilihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_lomba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/garis_blue"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="3dp"
            android:text="Lomba"
            android:textColor="@color/deepSkyBlue"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/fragment_beasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@id/fragment_lomba"
            android:background="@drawable/garis"
            android:paddingBottom="3dp"
            android:text="Beasiswa"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/daftar_request_lomba"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_baseline_group_add_blue" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/pilihan"
        android:layout_above="@id/toolbar"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_bar"
                android:layout_below="@id/fragment_lomba"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/search2"
                    android:background="@drawable/border">

                    <SearchView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:queryHint="Search Here"
                        android:id="@+id/search"
                        android:iconifiedByDefault="false"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:background="@null" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_bar"
                android:id="@+id/filter"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="7dp"
                    android:id="@+id/filter_jenis_lomba"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Lomba : All"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/jenis_lomba"/>
                </RelativeLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/daftarLomba"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/filter"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/tampilan_lomba"/>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:id="@+id/tambah_lomba"
        android:background="@drawable/lingkaran_biru">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_add_white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>