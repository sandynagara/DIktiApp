<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:id="@+id/kembali"
                android:src="@drawable/ic_baseline_arrow_back_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Profil"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/deepSkyBlue"/>
        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo_dikti"
                    android:id="@+id/foto_anggota"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Nama"
                android:layout_marginStart="20dp"
                android:layout_below="@id/foto_anggota"
                android:layout_marginTop="30dp">
                <ImageView
                    style="@style/icon_profil"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_person"
                    android:id="@+id/icon_person" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Nama"
                    android:textSize="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/icon_person"
                    android:textStyle="bold"
                    android:id="@+id/nama"/>
                <TextView
                    style="@style/batas_nama_profil"
                    android:layout_height="wrap_content"
                    android:text="Sandy Setyanagara"
                    android:layout_below="@id/icon_person"
                    android:layout_toRightOf="@id/icon_person"
                    android:id="@+id/namaprofil"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/email"
                android:layout_below="@id/Nama"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp">
                <ImageView
                    style="@style/icon_profil"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_location_on_blue"
                    android:id="@+id/alamat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Alamat"
                    android:textSize="20sp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@id/alamat"
                    android:textStyle="bold"
                    android:id="@+id/alamat1"/>
                <TextView
                    style="@style/batas_nama_profil"
                    android:layout_height="wrap_content"
                    android:text="Tausan22@gmail.com"
                    android:textSize="15sp"
                    android:layout_toEndOf="@id/alamat"
                    android:layout_below="@id/alamat"
                    android:id="@+id/alamat2"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/pensil"
                    android:id="@+id/edit_alamat"
                    android:background="@color/white"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/email"
                android:layout_below="@id/Nama"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">
                <ImageView
                    style="@style/icon_profil"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_email"
                    android:id="@+id/email"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Email"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/email"
                    android:textStyle="bold"
                    android:id="@+id/email1"
                    android:layout_marginTop="7dp"/>
                <TextView
                    style="@style/batas_nama_profil"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Tausan22@gmail.com"
                    android:layout_below="@id/email"
                    android:layout_toRightOf="@id/email"
                    android:id="@+id/email2"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/pensil"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/editEmail"
                    android:background="@color/white"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:layout_below="@id/email"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">
                <ImageView
                    style="@style/icon_profil"
                    android:src="@drawable/ic_baseline_lock1"
                    android:id="@+id/icon_password"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Password"
                    android:textSize="20sp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@id/icon_password"
                    android:textStyle="bold"
                    android:id="@+id/password1"/>
                <TextView
                    style="@style/batas_nama_profil"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Nagara12"
                    android:password="true"
                    android:layout_below="@id/icon_password"
                    android:layout_toEndOf="@id/icon_password"
                    android:id="@+id/password2"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/pensil"
                    android:id="@+id/editPassword"
                    android:background="@color/white"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_telepon"
                android:layout_below="@id/password"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">
                <ImageView
                    style="@style/icon_profil"
                    android:src="@drawable/ic_baseline_call_profil"
                    android:id="@+id/icon_telepon"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Nomor Handphone"
                    android:textSize="20sp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@id/icon_telepon"
                    android:textStyle="bold"
                    android:id="@+id/no_telepon1"/>
                <TextView
                    style="@style/batas_nama_profil"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="083866676262"
                    android:layout_below="@id/icon_telepon"
                    android:layout_toEndOf="@id/icon_telepon"
                    android:id="@+id/no_telepon2"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/pensil"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/editNoHp"
                    android:background="@color/white"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_line"
                android:layout_below="@id/no_telepon"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">
                <ImageView
                    style="@style/icon_profil"
                    android:src="@drawable/line"
                    android:layout_centerVertical="true"
                    android:id="@+id/icon_line"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Id Line"
                    android:textSize="20sp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@id/icon_line"
                    android:textStyle="bold"
                    android:id="@+id/id_line1"/>
                <TextView
                    style="@style/batas_nama_profil"
                    android:layout_height="wrap_content"
                    android:text="Sandy_Setya"
                    android:layout_below="@id/icon_line"
                    android:layout_toEndOf="@id/icon_line"
                    android:id="@+id/id_line2"/>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/pensil"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/editLine"
                    android:background="@color/white"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/no_telepon"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">

                <ImageView
                    style="@style/icon_profil"
                    android:id="@+id/about_me"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_more_blue" />

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp"
                    android:text="About Me"
                    android:textSize="20sp"
                    android:layout_toEndOf="@id/about_me"
                    android:textStyle="bold"
                    android:id="@+id/about_me1"/>

                <TextView
                    style="@style/batas_nama_profil"
                    android:layout_height="wrap_content"
                    android:id="@+id/about_me2"
                    android:layout_toRightOf="@id/about_me"
                    android:text="Sandy_Setya"
                    android:layout_below="@id/about_me" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/pensil"
                    android:id="@+id/edit_about_me"
                    android:background="@color/white"
                    />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_below="@id/id_line"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FF0000"
                android:id="@+id/log_out">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="LOG OUT"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>