<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="7dp"
        android:id="@+id/cardlomba">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_dikti"
                    android:id="@+id/gambarlomba"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:id="@+id/rekomendasi"
                    android:src="@drawable/ic_baseline_favorite_gray"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nama_lomba"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gambarlomba"
                    android:layout_marginTop="12dp"
                    android:maxLines="2"
                    android:text="Lomba Poster Nasional “Kampanye Positif Ramadhan Saat Pandemi Covid 19”"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama_lomba"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:text="LKTI"
                    android:padding="1dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:id="@+id/jenis_lomba"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jenis_lomba"
                    android:id="@+id/deadline"
                    android:layout_marginTop="4dp"
                    android:textSize="15dp"
                    android:text="19 November 2020"
                    android:textColor="#DC143C"
                    android:textStyle="bold"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>