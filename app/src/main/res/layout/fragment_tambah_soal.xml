<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/card_kembali">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_arrow_back_blue"
                    android:layout_margin="12dp"
                    android:id="@+id/kembali"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Soal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/deepSkyBlue"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp">
                <Spinner
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/semester"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/garis"/>

                <Spinner
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jenis_matkul"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/garis"/>

                <Spinner
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/kelas"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/garis"/>

                <EditText
                    android:id="@+id/dosen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Nama Dosen"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/Gray"
                    android:background="@drawable/garis"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:textSize="19sp"/>

                <EditText
                    android:id="@+id/tahun_soal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Tahun Soal"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/Gray"
                    android:background="@drawable/garis"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:textSize="19sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_camera_alt_white"
                    android:id="@+id/foto_soal"
                    android:layout_marginTop="15dp"/>

                <RelativeLayout
                    android:id="@+id/tambah_foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/tambah_foto"
                    android:padding="7dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_camera_alt_white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/addData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Add"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:background="@drawable/tambah_foto"/>
            </LinearLayout>



        </LinearLayout>



</ScrollView>