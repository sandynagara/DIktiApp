<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Tim"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/deepSkyBlue"
            android:layout_margin="10dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="380dp">
        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/isi_lomba">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_dikti"
                    android:id="@+id/gambarlomba"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/gambarlomba"
                    android:layout_marginStart="10dp"
                    android:id="@+id/daftarIsi"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 Mei 2000"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/Red"/>

                    <TextView
                        android:id="@+id/nama_lomba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lomba Poster Nasional “Kampanye Positif Ramadhan Saat Pandemi Covid 19”"
                        android:textSize="17sp"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/isi_jenis_lomba"
                        android:layout_marginTop="4dp"
                        android:text="Poster"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:padding="1dp"
                        android:textSize="17sp"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/isi_lomba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mengisi_lomba"
                android:layout_marginLeft="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Jumlah Anggota : "
                    android:padding="1dp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:textSize="17sp"/>

                <EditText
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jumlah_anggota"
                    android:hint="0"
                    android:textColorHint="@color/Gray"
                    android:textSize="17sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="17dp"
                    android:text="Persyaratan Anggota : "
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tulis Disini.."
                    android:textColorHint="@color/Gray"
                    android:id="@+id/syarat_anggota"
                    android:textSize="17sp"/>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pilihan2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/popup_tambahan"
                    android:text="Apply"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:id="@+id/apply"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:background="@drawable/border_biru"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/popup_tambahan"
                    android:text="Batal"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:id="@+id/cancel2"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:padding="10dp"
                    android:background="@drawable/border"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@id/update"
                    android:layout_weight="0.1"
                    android:id="@+id/hapus"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_delete_white"
                    android:background="@drawable/border_merah"
                    android:padding="10dp"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pilihan1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buat Team"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:id="@+id/requestTim"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:background="@drawable/border_biru"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:id="@+id/cancel"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/border"
                    android:padding="10dp"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</LinearLayout>

